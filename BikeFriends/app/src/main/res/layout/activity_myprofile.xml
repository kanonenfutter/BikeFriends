<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profiless"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eis.bikefriends.MyProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="350dp"
                app:srcCompat="@android:drawable/ic_menu_report_image"
                android:id="@+id/profile_imageIV"
                android:scaleType="fitXY"
                android:layout_above="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_height="120dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:text="&lt;Vorname Nachname&gt;"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameTV"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

                <TextView
                    android:text="Alter, Geschlecht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/alter_geschlechtTv"
                    android:layout_below="@+id/profile_imageIV"
                    android:layout_alignParentStart="true"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

                <TextView
                    android:text="Wohnort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/alter_geschlechtTv"
                    android:layout_alignParentStart="true"
                    android:id="@+id/residenceTV"
                    android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

                <TextView
                    android:text="Radtyp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/residenceTV"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="48dp"
                    android:id="@+id/radtypTv"
                    android:textAppearance="@android:style/TextAppearance.Material.Title" />

                <TextView
                    android:text="Durch.Geschw."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radtypTv"
                    android:layout_alignParentStart="true"
                    android:id="@+id/speedTv"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:text="Durch. Distanz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/speedTv"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/distanceTv"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <Button
                    android:text="Profil bearbeiten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="137dp"
                    android:id="@+id/editBtn"
                    android:layout_below="@+id/distanceTv"
                    android:layout_centerHorizontal="true" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
