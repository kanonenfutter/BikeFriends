<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tracking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eis.bikefriends.CalibrationActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleCalbtn"
        android:textOff="Aufzeichnung starten"
        android:textOn="Aufzeichnung beenden"
        android:checked="true"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/savebtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/savebtn"
        tools:text="Speichern"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0 m/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currectSpeedTV"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:contentDescription="Momentane Geschwindigkeit"
        android:layout_below="@+id/traveledDistanceTV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="verbleibene m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/remainingDistanceTV" />

    <TextView
        android:text="0 km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/traveledDistanceTV"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:layout_below="@+id/progressBar"
        android:layout_alignStart="@+id/savebtn" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/averageSpeedTV"
        tools:text="Durchschnittsgeschwindigkeit"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_above="@+id/toggleCalbtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="samples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataSamplesTV"
        android:layout_below="@+id/remainingDistanceTV"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
